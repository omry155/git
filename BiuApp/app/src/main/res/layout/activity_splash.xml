<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SplashActivity"
    android:background="@drawable/splash_bg">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:id="@+id/imageView"
        android:src="@drawable/noaa"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/splash_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageView"/>

    <ProgressBar android:id="@+id/splash_pb"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_textView"
        android:progressDrawable="@drawable/progressbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        style="@android:style/Widget.ProgressBar.Horizontal"/>

</RelativeLayout>
